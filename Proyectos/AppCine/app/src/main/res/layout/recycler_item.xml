<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="230sp"
        android:elevation="10sp"
        app:cardCornerRadius="20sp"
        android:layout_margin="10sp"
        android:padding="10sp"
        android:backgroundTint="#014"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imgRecycler"
                android:layout_width="90sp"
                android:layout_height="130sp"
                android:src="@drawable/ic_lobo"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5sp"
                />
            <TextView
                android:id="@+id/txtRecyclerTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:text="El lobo de Wall Street"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5sp"
                />
            <TextView
                android:id="@+id/txtRecyclerTiempo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFCA28"
                android:textSize="15sp"
                android:text="DuraciÃ³n: 120 mins"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5sp"
                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>