<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MABoletos"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:text="DATOS DE COMPRA"
        android:gravity="center_horizontal"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:text="Nombre: "
            android:textSize="18sp"
            />
        <EditText
            android:id="@+id/edtNombreC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingrese su nombre"
            android:layout_margin="10sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:text="Apellido: "
            android:textSize="18sp"
            />
        <EditText
            android:id="@+id/edtApellido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingrese su apellido"
            android:layout_margin="10sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:text="Nit: "
            android:textSize="18sp"
            />
        <EditText
            android:id="@+id/edtNitC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingrese su NIT"
            android:inputType="number"
            android:layout_margin="10sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:text="Precio por unidad: Q60.00 x"
            android:textSize="18sp"
            />
        <EditText
            android:id="@+id/edtCantidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cantidad de Boletos"
            android:layout_margin="10sp"
            android:gravity="center"
            android:inputType="number"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="El total es: "
        android:textColor="#014"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_margin="15sp"
        />
    <TextView
        android:id="@+id/txtTotalC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="..."
        android:textColor="#014"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_margin="10sp"
        />

    <Button
        android:id="@+id/btnVerTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="25sp"
        android:text="Ver Total"
        android:textColor="@color/white"
        android:backgroundTint="#014"
        android:layout_marginRight="25sp"
        android:layout_marginLeft="25sp"
        android:layout_marginTop="10sp"

        />
    <Button
        android:id="@+id/btnPagar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="25sp"
        android:text="Pagar"
        android:textColor="@color/white"
        android:backgroundTint="#014"
        android:layout_margin="25sp"
        />

    <TextView
        android:id="@+id/txtPagado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CINECAP"
        android:textSize="35sp"
        android:textColor="#F9A825"
        android:gravity="center"
        android:layout_margin="10sp"
        />


</LinearLayout>