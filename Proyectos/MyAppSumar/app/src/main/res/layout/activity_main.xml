<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Operación SUMA"
        android:gravity="center"
        android:layout_marginTop="65sp"
        android:textSize="25sp"
        />
    <EditText
        android:id="@+id/edtNum1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtTitulo"
        android:layout_marginTop="40sp"
        android:layout_marginLeft="10sp"
        android:hint="Ingrese el primer número a sumar"
        android:inputType="number"
        />
    <EditText
        android:id="@+id/edtNum2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtNum1"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="10sp"
        android:hint="Ingrese el segundo número a sumar"
        android:inputType="number"
        />

    <TextView
        android:id="@+id/txtResultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtNum2"
        android:text="..."
        android:layout_marginTop="20sp"
        android:textSize="60sp"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/btnSumar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtResultado"
        android:layout_margin="25sp"
        android:text="sumar"
        android:layout_alignParentLeft="true"
        android:textSize="25sp"
        android:onClick="onClick"
        />
    <Button
        android:id="@+id/btnRestar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtResultado"
        android:layout_margin="25sp"
        android:text="restar"
        android:textSize="25sp"
        android:layout_alignParentRight="true"
        android:onClick="onClick"
        />
</RelativeLayout>