<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MAActualizarSQLite"
    android:orientation="vertical"
    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Actualizar Bebidas"
                android:layout_gravity="center"
                android:layout_margin="15sp"
                android:textSize="25sp"
                android:textStyle="bold"
                />
            <ListView
                android:id="@+id/lvBebidasActualizar"
                android:layout_width="match_parent"
                android:layout_height="200sp"
                android:layout_margin="10sp"
                />
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            </ScrollView>
            <EditText
                android:id="@+id/edtNombreActualizar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre Actualizar"
                android:layout_margin="15sp"
                android:inputType="text"
                />
            <EditText
                android:id="@+id/edtSaborActualizar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Sabor Actualizar"
                android:layout_margin="15sp"
                android:inputType="text"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/edtPresentacionActualizar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Presentacion Actualizar"
                    android:layout_margin="15sp"
                    android:inputType="number"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="mL"
                    android:textSize="20sp"
                    android:layout_margin="15sp"
                    android:textStyle="bold"
                    />
            </LinearLayout>

            <EditText
                android:id="@+id/edtTipoActualizar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tipo Actualizar"
                android:layout_margin="15sp"
                android:inputType="text"
                />
            <EditText
                android:id="@+id/edtPrecioActualizar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Precio Actualizar"
                android:layout_margin="15sp"
                android:inputType="numberDecimal"
                />
            <Button
                android:id="@+id/btnActualizarRegistro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Actualizar Bebida"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_margin="15sp"
                android:backgroundTint="#D32F2F"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>