<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MABuscarIdSQLite"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Busqueda Bebida por ID"
        android:textSize="35sp"
        android:layout_gravity="center"
        android:layout_margin="10sp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/edtIdBebidaBuscar"
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:hint="Ingrese el ID de la bebida a buscar"
            android:layout_margin="15sp"
            android:inputType="number"
            />
        <ImageButton
            android:id="@+id/imgBBuscar"
            android:layout_width="35sp"
            android:layout_height="35sp"
            android:layout_margin="15sp"
            android:src="@drawable/ic_launcher_background"
            />
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10sp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtCodigoB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CÃ³digo "
                android:textSize="25sp"
                android:layout_margin="15sp"
                />
            <TextView
                android:id="@+id/txtNombreB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre: "
                android:textSize="25sp"
                android:layout_margin="15sp"

                />
            <TextView
                android:id="@+id/txtSaborB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sabor: "
                android:textSize="25sp"
                android:layout_margin="15sp"

                />
            <TextView
                android:id="@+id/txtPresentacionB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Presentacion: "
                android:textSize="25sp"
                android:layout_margin="15sp"

                />
            <TextView
                android:id="@+id/txtTipoB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo: "
                android:textSize="25sp"
                android:layout_margin="15sp"

                />
            <TextView
                android:id="@+id/txtPrecioB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Precio: "
                android:textSize="25sp"
                android:layout_margin="15sp"

                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>