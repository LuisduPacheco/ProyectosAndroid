<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MAMeses"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/imgCeleb"
            android:layout_width="130sp"
            android:layout_height="130sp"
            android:src="@drawable/ic_launcher_background"
            android:layout_marginTop="60sp"
            android:layout_marginLeft="250sp"
            />
        <TextView
            android:id="@+id/txtMes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MES"
            android:textSize="40sp"
            android:fontFamily="serif-monospace"
            android:layout_marginTop="120sp"
            android:layout_marginLeft="40sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/txtCelebracion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre de la celebración"
        android:textSize="30sp"
        android:layout_margin="30sp"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30sp"
        >
    <TextView
        android:id="@+id/txtHistoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="celebración"
        android:textSize="30sp"
        android:layout_margin="30sp"
        />
    </ScrollView>


</LinearLayout>