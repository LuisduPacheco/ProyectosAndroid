<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#54BF72"
    android:orientation="vertical">


    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="OPERACIONES MATEMÁTICAS"
      android:fontFamily="sans-serif-black"
        android:textColor="#009688"
        android:textSize="40sp"
        android:gravity="center"
        android:layout_marginTop="150sp"
        android:layout_marginBottom="20sp"
        />
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30sp"
        >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="10sp"

            >
            <TextView
                android:id="@+id/txtSuma"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Suma"
                android:textSize="40sp"
                android:gravity="center"
                android:textColor="#FFDF7F"
                android:fontFamily="sans-serif-black"

                />
            <ImageButton
                android:id="@+id/imbSuma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_suma"
                android:layout_below="@id/txtSuma"
                android:layout_centerHorizontal="true"

                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            >
            <TextView
                android:id="@+id/txtResta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Resta"
                android:textSize="40sp"
                android:gravity="center"
                android:textColor="#FFDF7F"
                android:fontFamily="sans-serif-black"

                />
            <ImageButton
                android:id="@+id/imbResta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_resta"
                android:layout_below="@id/txtResta"
                android:layout_centerHorizontal="true"

                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            >
            <TextView
                android:id="@+id/txtMulti"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Multiplicación"
                android:textSize="40sp"
                android:gravity="center"
                android:textColor="#FFDF7F"
                android:fontFamily="sans-serif-black"


                />
            <ImageButton
                android:id="@+id/imbMulti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_multi"
                android:layout_below="@id/txtMulti"
                android:layout_centerHorizontal="true"

                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            >
            <TextView
                android:id="@+id/txtDiv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="División"
                android:textSize="40sp"
                android:gravity="center"
                android:textColor="#FFDF7F"
                android:fontFamily="sans-serif-black"

                />
            <ImageButton
                android:id="@+id/imbDiv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_division"
                android:layout_below="@id/txtDiv"
                android:layout_centerHorizontal="true"

                />
        </RelativeLayout>





    </LinearLayout>
        </ScrollView>

  </LinearLayout>